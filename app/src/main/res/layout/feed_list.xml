<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#616C6F"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/oner" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Name:"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtimagename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="Name"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="#fff"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/txtid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:text="ID"
            android:visibility="invisible"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textColor="#fff"
            android:textSize="15dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Date:"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Date"
                android:layout_weight="1"
                android:textAlignment="textStart"
                android:textColor="#fff"
                android:textSize="15dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="4dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textviews"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#ffccff"
                android:drawableLeft="@drawable/ic_red_eye_24"
                android:drawablePadding="10dp"
                android:ems="1"
                android:layout_weight="1"
                android:text="Views"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/textlikes"
                android:layout_width="80dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#ffccff"
                android:drawableLeft="@drawable/ic_like_24"
                android:drawablePadding="10dp"
                android:ems="1"
                android:layout_weight="1"
                android:text="Likes"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18dp" />
            <TextView
                android:id="@+id/textshare"
                android:layout_width="100dp"
                android:layout_height="32dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:background="#ffccff"
                android:drawableLeft="@drawable/ic_share_24"
                android:drawablePadding="10dp"
                android:ems="1"
                android:layout_weight="1"
                android:text="Share"
                android:textAlignment="viewStart"
                android:textColor="#000000"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>